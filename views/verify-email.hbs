<body>
    <div class="container">
        <div class="spinner"></div>
        <h1>Verifying Your Email</h1>
        <p>Please wait while we verify your email address...</p>
    </div>

    <script>
        // Submit verification request
        async function verifyEmail() {
            try {
                const response = await fetch('{{apiUrl}}/auth/verify-email', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        token: '{{token}}'
                    })
                });

                if (response.ok) {
                    // Redirect to success page
                    window.location.href = '{{apiUrl}}/auth/email-verified';
                } else {
                    const error = await response.json();
                    // Redirect to error page
                    window.location.href = '{{apiUrl}}/auth/verification-error?reason=' + encodeURIComponent(error.message || 'Verification failed');
                }
            } catch (error) {
                console.error('Verification error:', error);
                window.location.href = '{{apiUrl}}/auth/verification-error?reason=' + encodeURIComponent('Network error');
            }
        }

        // Auto-verify on page load
        window.addEventListener('load', verifyEmail);
    </script>
